# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...
source $HOME/.zshenv

# And set the path
PATH=$HOME/.local/bin:$PATH # Stack requires .local/bin added to the front of the path

PATH=$PATH:$GOBIN
PATH=$PATH:$LEIN_HOME
PATH=$PATH:$M2_HOME
PATH=$PATH:$SCALA_HOME
PATH=$PATH:$ANDROID_HOME
PATH=$PATH:$ANDROID_HOME/tools
PATH=$PATH:$ANDROID_HOME/platform-tools
PATH=$PATH:$NODE_BIN
PATH=$PATH:$JAVA_HOME
PATH=$PATH:$EXERCISM_HOME
PATH=$PATH:$POSTMAN_BIN
PATH=$PATH:$GRADLE_HOME
PATH=$PATH:$DOTNET_BIN
PATH=$PATH:$FLUTTER_BIN
PATH=$PATH:$ISTIO_HOME
PATH=$PATH:$GRAAL_BIN
PATH=$PATH:$LOCAL_BIN

# Added the cargo binary dir to the front of the path
PATH="$HOME/.cargo/bin:$PATH"

# and now that the path is built, export it
export PATH

# OPAM configuration
. /home/adam/.opam/opam-init/init.zsh > /dev/null 2> /dev/null || true


# Aliases
alias boot-template=boot -d seancorfield/boot-new

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/home/adam/bin/google-cloud-sdk/path.zsh.inc' ]; then source '/home/adam/bin/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/home/adam/bin/google-cloud-sdk/completion.zsh.inc' ]; then source '/home/adam/bin/google-cloud-sdk/completion.zsh.inc'; fi
